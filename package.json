{
  "private": true,
  "version": "0.90.27",
  "name": "wundergraph-env",
  "license": "Apache-2.0",
  "author": {
    "name": "WunderGraph Maintainers",
    "email": "info@wundergraph.com"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/wundergraph/wundergraph"
  },
  "homepage": "https://wundergraph.com",
  "scripts": {
    "boot": "pnpm install --filter='!./packages/*-testapp' --ignore-scripts",
    "build": "pnpm -r run --filter='!./packages/*-testapp' build",
    "test": "pnpm run -r test",
    "lerna": "lerna",
    "list": "lerna list -l",
    "format": "prettier --write --loglevel silent --end-of-line=auto \"./**/*.{cjs,js,jsx,ts,tsx,html,css,json}\" --ignore-path .gitignore",
    "codegen": "pnpm run --filter='./packages/protobuf' build",
    "test:version:packages": "pnpm run version:packages --git-dry-run",
    "version:packages": "lerna version --no-commit-hooks --message=\"chore(release): Publish\"",
    "publish:packages": "lerna publish --no-git-tag-version --no-commit-hooks --create-release github --yes --message=\"chore(release): Publish\"",
    "test:version:packages-next": "pnpm run version:packages-next --git-dry-run",
    "version:packages-next": "lerna version prepatch --preid next --no-commit-hooks --message=\"chore(release): Publish next\"",
    "publish:packages-next": "lerna publish prerelease --no-git-tag-version --no-commit-hooks --create-release github --yes --message=\"chore(release): Publish next\"",
    "publish:engine": "release-it --git.requireBranch=main",
    "publish:engine-next": "release-it --git.requireBranch=next --preRelease=next",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "release-it": {
    "dry-run": false,
    "git": {
      "tagMatch": "[!@]*",
      "tagName": "v${version}",
      "commitMessage": "ci(release): release ${version}",
      "requireCleanWorkingDir": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "pnpm update --filter ./packages/sdk --workspace @wundergraph/wunderctl@${version} && pnpm install --lockfile-only"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "packages/wunderctl/package.json",
            "path": "version"
          }
        ]
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@lerna-lite/cli": "^1.4.0",
    "@lerna-lite/list": "^1.4.0",
    "@release-it/bumper": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2"
  }
}
